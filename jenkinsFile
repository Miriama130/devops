pipeline {
    agent any

    environment {
        GIT_CREDENTIALS_ID = 'ONS' // Ensure 'ONS' is correctly stored in Jenkins Credentials
    }

    triggers {
        pollSCM('H/5 * * * *') // Polls SCM every 5 minutes (Reduce load)
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    git credentialsId: "${GIT_CREDENTIALS_ID}",
                        url: 'https://github.com/Miriama130/devops.git',
                        branch: 'ons'
                }
            }
        }

        stage('Clean Project') {
            steps {
                sh 'echo "helloo!"'
            }
        }
    }

    post {
        success {
            echo "✅ Build completed successfully!"
        }
        failure {
            echo "❌ Build failed! Check logs."
        }
    }
}
